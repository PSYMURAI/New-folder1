</head>
<body>

    <div class="message">
        <div class="success">
            <h2><%= success %></h2>
        </div>
        <div class="error">
        <h2> <%= error %> </h2>
        </div>
    </div>
    <div class="container">
        <h1>User Information</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>College</th>
                    <th>Mobile</th>
                    <th>Email</th>
                    <th>Event Day 1</th>
                    <th>Event Day 2</th>
                    <th>Event Day 3</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user) => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.collegeName %></td>
                        <td><%= user.mobile %></td>
                        <td><%= user.email %></td>
                        <td><%= user.eventDay1 %></td>
                        <td><%= user.eventDay2 %></td>
                        <td><%= user.eventDay3 %></td>
                        <td><img src="/uploads/<%= user.paymentImage %>" width="100"></td>
                        <td class="action-buttons">
                            <button onclick="approveUser('<%= user.id %>')">Approve</button>
                            <a href="/download/<%= user.id %>"><button>Download</button></a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    
